# Основные настройки
APP_NAME="RAG System"

# ChromaDB
CHROMA_DB_PATH="storage/chroma_db"
COLLECTION_NAME="documents"

# Эмбеддинги
EMBEDDING_PROVIDER="ollama"
EMBEDDING_MODEL="qwen3-embedding:0.6b"
BATCH_SIZE=1

# Ollama
OLLAMA_BASE_URL=""
OLLAMA_TIMEOUT=30

# Поиск
INITIAL_CANDIDATES=5
FINAL_RESULTS=3
MAX_CONTEXT_DOCUMENTS=1

# Реранкер
RERANKER_PROVIDER="ollama"
ENABLE_RERANKING=true
RERANKER_MODEL="gemma3:1b"
RERANKER_TEMPERATURE=0.0

# Генератор
GENERATION_MODEL="gemma3:1b"
GENERATION_TEMPERATURE=0.0

# Бот
TELEGRAM_TOKEN=""
